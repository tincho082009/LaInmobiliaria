@model IEnumerable<PrimerProyecto.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                Codigo Contrato
            </th>
            <th>
                Fecha Inicio Contrato
            </th>
            <th>
                Fecha Finalizacion Contrato
            </th>
            <th></th>
            @if (User.IsInRole("Administrador"))
            {
                <th></th>
            }

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                @Html.ActionLink(item.ContratoAlquiler.Id + "", "Index", "ContratoAlquiler", new { id = item.Id }, new { @class = "text-decoration-none" })
            </td>
            <td>
                @(item.ContratoAlquiler.FechaInicio)
            </td>
            <td>
                @(item.ContratoAlquiler.FechaFinalizacion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
            </td>
            @if (User.IsInRole("Administrador"))
            {
                <td>
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            }
        </tr>
}
    </tbody>
</table>
