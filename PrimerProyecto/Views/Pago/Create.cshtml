@model PrimerProyecto.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo:</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NroPago" class="control-label"></label>
                <input asp-for="NroPago" class="form-control" />
                <span asp-validation-for="NroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contratos</label>
                <select class="form-control" name="ContratoId">
                    @foreach (var item in (IList<ContratoAlquiler>)ViewBag.ContratoAlquiler)
                    {
                        <option value="@item.Id">@(item.Id + " " + item.Monto)</option>
                    }
                </select>
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-info">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
