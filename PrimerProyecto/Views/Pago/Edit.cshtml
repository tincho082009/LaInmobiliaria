@model PrimerProyecto.Models.Pago

@{
    ViewData["Title"] = "Edit";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
}
<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Pago</h1>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="formBox">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Numero de pago</div>
                            <input asp-for="NroPago" class="inputEdit" />
                            <span asp-validation-for="NroPago" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Fecha de Pago</div>
                            <input asp-for="FechaPago" class="inputEdit" />
                            <span asp-validation-for="FechaPago" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Importe</div>
                            <input asp-for="Importe" class="inputEdit" />
                            <span asp-validation-for="Importe" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <select class="selectpicker form-control" data-live-search="true" title="CONTRATOS" name="ContratoId">
                                <option hidden></option>
                                @foreach (var item in (IList<ContratoAlquiler>)ViewBag.ContratoAlquiler)
                                {
                                    @:<option @(item.Id == Model.ContratoId ? "selected" : "") value="@item.Id">@(item.Id + " " + item.Monto)</option>
                                }
                            </select>
                            <span asp-validation-for="ContratoId" class="text-danger"></span>
                        </div>
                    </div>
                </div>            
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Guardar" name="" class="button" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <a asp-action="Index" class="buttonIndex btn btn-dark">Regresar a la lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptsFormularios");}
}