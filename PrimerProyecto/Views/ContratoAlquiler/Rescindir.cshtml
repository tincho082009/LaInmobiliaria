@model PrimerProyecto.Models.ContratoAlquiler

@{
    ViewData["Title"] = "Rescindir";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
    <style>
        #what-we-do .card .block-1:before {
            content: "\f0e7";
        }

        #what-we-do .card .block-2:before {
            content: "\f155";

        }

        #what-we-do .card .block-3:before {
            content: "\f073";
        }

        #what-we-do .card .block-4:before {
            content: "\f073";
        }
        #what-we-do .card .block-5:before {
            content: "\f0e7";
        }
        #what-we-do .card .block-6:before {
            content: "\f0e7";
        }
        #what-we-do .card .block-7:before {
            content: "\f058";
        }
    </style>
}
<h1>Rescindir</h1>
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Contrato</h1>
    </div>
</div>
<section id="what-we-do">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-1">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Id)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.Id)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-2">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Monto)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.Monto)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-3">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.FechaInicio)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.FechaInicio)</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-4">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.FechaFinalizacion)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.FechaFinalizacion)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-5">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.InquilinoId)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.InquilinoId)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-6">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.InmuebleId)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.InmuebleId)</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-7">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Estado)</h3>
                        <p class="card-text">
                            @if (Model.Estado)
                            {
                                <div class="btn-capsul btn btn-success fas fa-check-circle" title="Disponible"></div>
                            }
                            else
                            {
                                <div class="btn-capsul btn btn-danger fas fa-times-circle" title="No Disponible"></div>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="row">
    <div class="col-sm-12">
        <form asp-action="Rescindir">
            <input type="submit" value="Rescindir" class="button" />
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-12">
        <a asp-action="Index" class="buttonIndex btn">Regresar a la lista</a>
    </div>
</div>
