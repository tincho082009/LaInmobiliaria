@model PrimerProyecto.Models.ContratoAlquiler

@{
    ViewData["Title"] = "Renovar";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
}
<h1>Renovar</h1>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Contrato alquiler</h1>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="formBox">
            <form asp-action="Renovar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Monto</div>
                            <input asp-for="Monto" class="inputEdit" min="1" maxlength="15" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Fecha de inicio</div>
                            <input asp-for="FechaInicio" class="inputEdit" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Fecha de finalizacion</div>
                            <input asp-for="FechaFinalizacion" class="inputEdit" />
                            <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Inquilino</div>
                            <input  type="text" value="@(ViewBag.Inquilino.Nombre + '-' + ViewBag.Inquilino.Apellido)" class="inputEdit" readonly/>
  
                        </div>
                    </div>
                  
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Inmueble</div>
                            <input type="text" value="@(ViewBag.Inmueble.Direccion)"class="inputEdit" readonly />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Renovar" name="" class="button" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <a asp-action="Index" class="buttonIndex btn btn-dark">Regresar a la lista</a>
                    </div>
                </div>
</form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptsFormularios");}
}