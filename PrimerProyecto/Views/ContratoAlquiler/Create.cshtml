@model PrimerProyecto.Models.ContratoAlquiler

@{
    ViewData["Title"] = "Create";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
}

<h1>Crear nuevo:</h1>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Contrato Alquiler</h1>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="formBox">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Monto</div>
                            <input asp-for="Monto" class="inputEdit" min="1" maxlength="15" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Fecha de inicio</div>
                            <input asp-for="FechaInicio" class="inputEdit" />
                            <span asp-validation-for="FechaInicio" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Fecha de finalizacion</div>
                            <input asp-for="FechaFinalizacion" class="inputEdit" />
                            <span asp-validation-for="FechaFinalizacion" class="text-danger"></span>
                        </div>
                    </div>                
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <select class="selectpicker form-control " data-live-search="true" title="INMUEBLES" name="InmuebleId">
                                @foreach (var item in (IList<Inmueble>)ViewBag.Inmueble)
                                {
                                     <option value="@item.Id">@(item.Direccion)</option>
                                }
                            </select>
                            <span asp-validation-for="InmuebleId" class="text-danger"></span>
                        </div>
                    </div>  
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <select class="selectpicker form-control " data-live-search="true" title="INQUILINOS" name="InquilinoId">
                                @foreach (var item in (IList<Inquilino>)ViewBag.Inquilino)
                                {
                                    <option value="@item.Id">@(item.Nombre + " " + item.Apellido)</option>
                                }
                            </select>
                            <span asp-validation-for="InquilinoId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Crear" name="" class="button" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <a asp-action="Index" class="buttonIndex btn">Regresar a la lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptsFormularios");}
}

