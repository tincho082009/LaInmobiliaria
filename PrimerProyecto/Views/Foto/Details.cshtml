@model PrimerProyecto.Models.Foto

@{
    ViewData["Title"] = "Details";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
    <style>
        #what-we-do .card .block-1:before {
            content: "\f0e7";
        }

        #what-we-do .card .block-2:before {
            content: "\f0c6";
        }

        #what-we-do .card .block-3:before {
            content: "\f034";
        }

        #what-we-do .card .block-4:before {
            content: "\f0e7";
        }
    </style>
}

<h1>Detalles</h1>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Foto</h1>
    </div>
</div>
<section id="what-we-do">
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-1">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Id)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.Id)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-2">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Url)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.Url)</p>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-3">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.Tipo)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.Tipo)</p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
                <div class="card">
                    <div class="card-block block-4">
                        <h3 class="card-title">@Html.DisplayNameFor(model => model.InmuebleId)</h3>
                        <p class="card-text">@Html.DisplayFor(model => model.InmuebleId)</p>

                    </div>
                </div>
            </div>            
        </div>
        
    </div>
</section>
<div class="row">
    <div class="col-sm-12">
        @Html.ActionLink("Regresar", "Fotos", "Inmuebles", new { id = Model.InmuebleId }, new { @class = "btn buttonIndex" })
    </div>
</div>