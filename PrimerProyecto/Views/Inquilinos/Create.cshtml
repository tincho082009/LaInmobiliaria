@model PrimerProyecto.Models.Inquilino

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
}
<h1>Crear nuevo:</h1>
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Inquilino</h1>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="formBox">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">DNI</div>
                            <input asp-for="Dni" class="input" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Nombre</div>
                            <input asp-for="Nombre" class="input" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Apellido</div>
                            <input asp-for="Apellido" class="input" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Trabajo</div>
                            <input asp-for="Trabajo" class="input" />
                            <span asp-validation-for="Trabajo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Nombre del Garante</div>
                            <input asp-for="NombreGarante" class="input" />
                            <span asp-validation-for="NombreGarante" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Dni del Garante</div>
                            <input asp-for="DniGarante" class="input" />
                            <span asp-validation-for="DniGarante" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Crear" name="" class="button" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <a asp-action="Index" class="buttonIndex btn btn-dark">Regresar a la lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptsFormularios");}
}