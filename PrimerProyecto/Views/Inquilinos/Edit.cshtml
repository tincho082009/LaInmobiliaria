@model PrimerProyecto.Models.Inquilino

@{
    ViewData["Title"] = "Edit";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstilosFormularios");}
}

<h1>Editar</h1>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h1 class="titulo">Inquilino</h1>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="formBox">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">DNI</div>
                            <input asp-for="Dni" class="inputEdit" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Nombre</div>
                            <input asp-for="Nombre" class="inputEdit" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Apellido</div>
                            <input asp-for="Apellido" class="inputEdit" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Trabajo</div>
                            <input asp-for="Trabajo" class="inputEdit" />
                            <span asp-validation-for="Trabajo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Nombre del Garante</div>
                            <input asp-for="NombreGarante" class="inputEdit" />
                            <span asp-validation-for="NombreGarante" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="inputBoxEdit">
                            <div class="inputTextEdit">Dni del Garante</div>
                            <input asp-for="DniGarante" class="inputEdit" />
                            <span asp-validation-for="DniGarante" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" value="Guardar" name="" class="button" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <a asp-action="Index" class="buttonIndex btn">Regresar a la lista</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ScriptsFormularios");}
}
