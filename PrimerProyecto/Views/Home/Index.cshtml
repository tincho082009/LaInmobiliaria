@{
    ViewData["Title"] = "Inicio";
}
@section Styles {
    @{await Html.RenderPartialAsync("_EstiloIndex");}
}

<section class="intro carousel slide bg-overlay-light h-auto" id="carouselExampleCaptions">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" alt="First slide" src="https://images.pexels.com/photos/1797393/pexels-photo-1797393.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500">
            <div class="carousel-caption ">

                @if (!User.Identity.IsAuthenticated)
                {
                    <h2 class="display-4 text-white mb-2 mt-4">Bienvenido a Cair Paravel</h2>
                    <p class="text-white mb-3 px-5 lead">Para poder continuar debe loguearse :D</p>

                }
                else
                {
                    <h2 class="display-4 text-white mb-2 mt-4">Bienvenido a Cair Paravel @User.Claims.ToList()[1].Value</h2>
                    <a class="btn botonAccion btn-capsul px-4 py-2" asp-controller="Usuario" asp-action="Perfil">Ver mi Perfil</a>
                }


            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" alt="First slide" src="https://images.pexels.com/photos/460695/pexels-photo-460695.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500">
            <div class="carousel-caption ">
                <h2 class="display-4 text-white mb-2 mt-4">Atencion para propietarios</h2>
                <p class="text-white mb-3 px-5 lead">Pueden venir a nuestras instalaciones mas cercanas, y de ahi le diremos como proseguir</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</section>

<!-- Info block 1 -->
<section class="info-section">
    <div class="container">
        <div class="head-box text-center mb-5">
            <h2>¿Quienes somos?</h2>
            <h6 class="text-underline-primary">Nuestros origenes, objetivos y atencion</h6>
        </div>
        <div class="three-panel-block mt-5">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="service-block-overlay text-center mb-5 p-lg-3">
                        <i class="fa fa-laptop box-circle-solid mt-3 mb-3" aria-hidden="true"></i>
                        <h3>Origen</h3>
                        <p class="px-4">La inmobiliaria Cair Paravel es una empresa fundada en el año 2000 en la ciudad de San Luis con el fin de brindar servicios inmobiliaros a la comunidad.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="service-block-overlay text-center mb-5 p-lg-3">
                        <i class="fa fa-calendar box-circle-solid mt-3 mb-3" aria-hidden="true"></i>
                        <h3>Objetivos</h3>
                        <p class="px-4">Nuestro principal objetivo es su comodidad y brindarle el mejor servicio posible.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="service-block-overlay text-center mb-5 p-lg-3">
                        <i class="fa fa-bug box-circle-solid mt-3 mb-3" aria-hidden="true"></i>
                        <h3>Atencion</h3>
                        <p class="px-4">
                            Por parte de nuestro equipo llevamos una politica de trabajo incluyente.
                            Queremos distingirnos de las otras inmobiliarias por nuestra atencion al publico y trabajo.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>




